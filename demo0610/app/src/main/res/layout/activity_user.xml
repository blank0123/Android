<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg4">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="pin"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/portrait"
        android:background="@drawable/shape"
        android:layout_gravity="center"/>
<!--    <ProgressBar-->
<!--        android:id="@+id/progressBar1"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"/>-->
</FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_usermname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"

                android:hint="@string/prompt_usermname"
                android:background="@drawable/shape"
                android:textSize="18dp"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLength="20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_password"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"

                android:hint="@string/prompt_resetPassword"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="20"

                android:background="@drawable/shape"
                android:enabled="false"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_realname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <EditText
                android:id="@+id/realname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"

                android:hint="@string/prompt_realname"
                android:inputType="text"
                android:lines="1"
                android:maxLength="10"
                android:background="@drawable/shape"

                android:enabled="false"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_studentnum"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <EditText
                android:id="@+id/studentnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"

                android:hint="@string/prompt_studentnum"
                android:inputType="number"
                android:lines="1"
                android:maxLength="13"

                android:background="@drawable/shape"
                android:enabled="false"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_phonenumber"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <EditText
                android:id="@+id/phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"

                android:hint="@string/prompt_phonenumber"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"


                android:background="@drawable/shape"
                android:enabled="false"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_major"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <EditText
                android:id="@+id/major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"
                android:hint="@string/prompt_major"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"

                android:background="@drawable/shape"
                android:enabled="false"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt_classname"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <EditText
                android:id="@+id/classname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/editText_marginStart"
                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"
                android:hint="@string/prompt_classname"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:background="@drawable/shape"
                android:enabled="false"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textSize="@dimen/textSize"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/editText_marginTop"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal"

                android:id="@+id/gender">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:enabled="false"

                    android:background="@drawable/shape"
                    android:text="@string/male" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/shape"
                    android:enabled="false"
                    android:text="@string/female" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>








